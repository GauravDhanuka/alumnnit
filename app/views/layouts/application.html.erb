<!DOCTYPE html>
<html>
<head>
  <title>Alumnnit</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="login-register.css" rel="stylesheet" />
  <script src="login-register.js" type="text/javascript"></script>

  <%= csrf_meta_tags %>
</head>
<body>
  <script>
    $(document).ready(function() {
      setTimeout(function() {
        $("#notice_wrapper").fadeOut("slow", function() {
          $(this).remove();
        }); 
      }, 3000);
    });
  </script> 
	<% if notice or alert %>
		<div id="notice_wrapper">
	  		<% flash.each do |key, value| %>
	    		<div class="alert alert-<%= key %>">
	      			<p><%= value %></p>
	    		</div>
	  		<% end %>
		</div>
	<% end %>	
  <header id="t3-header" class="t3-header">
            <div class="container">
                <div class="row">
                    <!-- LOGO -->
                    <div class="col-xs-12 col-sm-6 col-sm-offset-4 logo">
                        <div class="logo-image">
                            <a href="#" title="">
                                <img class="logo-img" src="../images/logo.png" alt="MNNIT Allahabad" style="height: 50%;width:50%" />
                                <span></span>
                            </a>
                            <small class="site-slogan">MNNIT Alumni Association</small>
                        </div>
                    </div>

                    <!-- LOGIN SIGNUP -->
                    <div class="col-sm-5 col-sm-push-0">
                        <div class="languageswitcherload">
                            <div class="mod-languages">
                                <!--<p id="a">Alumni Association</p>-->
                            </div>
                        </div>
                    </div>
                    <!-- END OF LOGIN SIGNUP -->




                </div>
            </div>
    </div>
  </header>
	    <!-- Navigation -->
    <nav class="navbar navbar-ct-black" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
              <!--<a class="navbar-brand navbar-brand-logo" href="/">
                <div class="logo">
                    <%= image_tag "logo2.jpeg" %>
                    
                </div>
                <div class="brand"> 
                  <span style="font-size: 25px;">MNNIT</span> Alumni 
                </div>
              </a>
              -->
            	
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            	<ul class="nav navbar-nav">
    			        <li style="margin-top: 10px;"><%= link_to '<i class="fa fa-home fa-fw" aria-hidden="true"></i> Home'.html_safe, root_path %></li>
                  <li style="margin-top: 10px;"><%= link_to '<i class="fa fa-book fa-fw" aria-hidden="true"></i> Forum'.html_safe, coming_soon_path %></li>
    			        <li style="margin-top: 10px;"><%= link_to '<i class="fa fa-lightbulb-o fa-fw" aria-hidden="true"></i> About'.html_safe, about_path %></li>
    			        <li style="margin-top: 10px;"><%= link_to '<i class="fa fa-phone fa-fw" aria-hidden="true"></i> Contact Us'.html_safe, new_contact_path %></li>
                  <li style="margin-top: 10px;"><%= link_to '<i class="fa fa-gift fa-fw" aria-hidden="true"></i> Give Back'.html_safe, fund_path %></li>
    			    </ul>
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
			          <li class="dropdown" style="margin-top: 15px;">
			            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
			              <% if current_user.nick_name? %>		
			              	<%= current_user.nick_name %>
			              <% else %>
			              	<%= current_user.email %>
			              <% end %>	
			              <span class="caret"></span>
			            </a>
			            <ul class="dropdown-menu" role="menu">
			              <li><%= link_to '<i class="fa fa-user fa-fw" aria-hidden="true"></i> Profile'.html_safe, '#' %></li>
			              <li><%= link_to '<i class="fa fa-pencil fa-fw" aria-hidden="true"></i> Settings'.html_safe, edit_user_registration_path %></li>
			              <li class="divider"></li>
			              <li><%= link_to '<i class="fa fa-sign-out fa-fw" aria-hidden="true"></i> Log out'.html_safe, destroy_user_session_path, method: :delete %></li>
			            </ul>

			          </li>
			          
			          	<li> 
			          		<% if current_user.is_active == false and current_user.request.nil? %>
			          			<%= link_to 'Activate', activate_path, style: "margin-top: 20px;" %>
                    <% elsif current_user.is_active == false  %>
                      <%= link_to 'Show Request', requests_path, style: "margin-top: 20px;" %>
			          		<% end %>	
			            </li>
			        <% else %>
			          <li style="margin-top: 10px; background-color: rgba(250,250,0,0.85); height: 5rem; margin-left: 5px; margin-right: 5px; border-radius: 5px;"><%= link_to '<i class="fa fa-lock fa-fw" aria-hidden="true"></i> Log In'.html_safe,"#loginModal","data-toggle" => "modal" , remote: true, onclick: "openLoginModal();", style: "margin: auto;"%></li>
			          <li style="margin-top: 10px; margin-left: 10px: margin-right: 10px; background-color: rgba(250,250,0,0.85); height: 5rem; border-radius: 5px;"><%= link_to '<i class="fa fa-user-plus fa-fw" aria-hidden="true"></i> Sign Up'.html_safe,"#loginModal","data-toggle" => "modal", remote: true, onclick: "openRegisterModal();",style: "margin: auto;" %></li>
			        <% end %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
            
        </div>
        <!-- /.container -->

    </nav>

    <div class="modal fade login" id="loginModal">
	    <div class="modal-dialog login animated">
		    <div class="modal-content">
		        <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title text-center">Login </h4>
                </div>
                <div class="modal-body">  
                    <div class="box">
                         <div class="content">
                           <!-- <div class="social">
                                <a class="circle github" href="/auth/github">
                                    <i class="fa fa-github fa-fw"></i>
                                </a>
                                <a id="google_login" class="circle google" href="/auth/google_oauth2">
                                    <i class="fa fa-google-plus fa-fw"></i>
                                </a>
                                <a id="facebook_login" class="circle facebook" href="/auth/facebook">
                                    <i class="fa fa-facebook fa-fw"></i>
                                </a>
                            </div>
                            <div class="division">
                                <div class="line l"></div>
                                  <span>or</span>
                                <div class="line r"></div>
                            </div>-->
                            <div class="error"></div>
                            <div class="form loginBox">
                                <%= render 'partial/login' %>
                            </div>
                         </div>
                    </div>
                    <div class="box">
                        <div class="content registerBox" style="display:none;">
                         <div class="form">
                         	<%= render 'partial/register' %>   
                         </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="forgot login-footer">
                        <%= link_to "Forgot Password", new_password_path(resource_name) %><br />	                            
                        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />

                        <span>Looking to 
                             <a href="javascript: showRegisterForm();">create an account</a>
                        ?</span>
                    </div>
                    <div class="forgot register-footer" style="display:none">
                         <span>Already have an account?</span>
                         <a href="javascript: showLoginForm();">Login</a><br />
                         <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />

                    </div>
                </div>        
		    </div>
	    </div>
  	</div>
	<%= yield %>
  <hr>
	<%= render 'pages/footer' %>
  

</body>

</html>
