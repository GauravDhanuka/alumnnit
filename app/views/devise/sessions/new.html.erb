<div class="container">
  <div class="row" style="margin-top: 25px;">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h2 style="text-align: center;">Sign in</h2>
        </div>
        <div class="panel-body">

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.input :email, required: false, autofocus: true, error: 'Email is mandatory, please specify one', input_html: { class: 'form-control' } %>
            </div>  
              <br>
            <div class="form-group">  
              <%= f.input :password, required: false, input_html: { class: 'form-control' } %>
            </div>  
              <br>
            <div class="checkbox">  
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>  
              <br>
            

            <div class="form-actions">
              <%= f.button :submit, "Sign in", class: 'btn btn-lg btn-success col-md-offset-5' %>
            </div>
            <br>
          <% end %>
        </div>
        <div class="panel-footer" style="background-color: #D6E9C6;">  

          <%= render "devise/shared/links" %>
        </div>
      </div>  
    </div>
  </div>
  <hr>
  <%= render 'pages/footer'%>
</div>  