<div class="container" style="height: 600px; margin-top: 30px;">
	
	<div class="text-center">	
		<h1>
			<%= @news.title %>
		</h1>
		<hr>
		
		<div>
			<%= @news.description %>
		</div>
		<% if !@news.photo.present? %>
			<div >
				<%= image_tag(@news.photo.url , alt: "No Photo Added") %>
			</div>		
		<% end %>
	</div>
	<br>	
	<hr>
	<div class="text-center">
		<% if user_signed_in? and current_user.is_admin == true %>
			<%= link_to "Edit", edit_news_path , class: "btn btn-lg btn-red" %>
			<%= link_to "Delete", @news,  method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-lg btn-red" %>
		<% end %>
	</div>	
		
	
</div>