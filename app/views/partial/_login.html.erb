<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <br>
  <div class="form-group">
    <%= f.input :email, label: false, placeholder: "Email",required: false, autofocus: true, error: 'Email is mandatory, please specify one', input_html: { class: 'form-control' } %>
  </div>  
    <br>
  <div class="form-group">  
    <%= f.input :password, label: false, placeholder: "Password", required: false, input_html: { class: 'form-control' } %>
  </div>  
    <br>
  <div class="checkbox">  
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>  
    <br>
  <div class="form-actions">
    <%= f.button :submit, "LogIn", class: 'btn btn-login btn-info' %>
  </div>
<% end %> 