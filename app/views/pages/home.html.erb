
<% if !user_signed_in? %>
    <div class="container-fluid" style="margin-top: -20px;">
            <!-- Start: Header -->
            <div class="row hero-header fill" style="background-image:url(<%= asset_path 'alumni.jpg' %>);">
              <div class="col-md-12 text-center " style="margin-top: -80px; padding-top: -50px;">
                <h1 style="color: black;"><span>MNNIT <span style="color: #DD5138">Alumni</span> Association</span></h1>
                <h3 style="color: black;">Welcomes You!</h3>
                <% if !user_signed_in? %>
                    <%= link_to '<i class="fa fa-lock fa-fw" aria-hidden="true"></i> Log In'.html_safe,"#loginModal","data-toggle" => "modal" , remote: true, onclick: "openLoginModal();", class: "btn btn-lg btn-red" %>
                    <%= link_to '<i class="fa fa-user-plus fa-fw" aria-hidden="true"></i> Sign Up'.html_safe,"#loginModal","data-toggle" => "modal", remote: true, onclick: "openRegisterModal();", class: "btn btn-lg btn-red" %>
                <% else %>
                    <h3 style="color: black;">Welcome Back!</h3>    
                <% end %>    

              </div>
              
            </div>
            <div class="modal fade login" id="loginModal">
                <div class="modal-dialog login animated">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title text-center">Login </h4>
                        </div>
                        <div class="modal-body">  
                            <div class="box">
                                 <div class="content">
                                   <!-- <div class="social">
                                        <a class="circle github" href="/auth/github">
                                            <i class="fa fa-github fa-fw"></i>
                                        </a>
                                        <a id="google_login" class="circle google" href="/auth/google_oauth2">
                                            <i class="fa fa-google-plus fa-fw"></i>
                                        </a>
                                        <a id="facebook_login" class="circle facebook" href="/auth/facebook">
                                            <i class="fa fa-facebook fa-fw"></i>
                                        </a>
                                    </div>
                                    <div class="division">
                                        <div class="line l"></div>
                                          <span>or</span>
                                        <div class="line r"></div>
                                    </div>-->
                                    <div class="error"></div>
                                    <div class="form loginBox">
                                        <%= render 'partial/login' %>
                                    </div>
                                 </div>
                            </div>
                            <div class="box">
                                <div class="content registerBox" style="display:none;">
                                 <div class="form">
                                    <%= render 'partial/register' %>   
                                 </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="forgot login-footer">
                                <%= link_to "Forgot Password", new_password_path(resource_name) %><br />                                
                                <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />

                                <span>Looking to 
                                     <a href="javascript: showRegisterForm();">create an account</a>
                                ?</span>
                            </div>
                            <div class="forgot register-footer" style="display:none">
                                 <span>Already have an account?</span>
                                 <a href="javascript: showLoginForm();">Login</a><br />
                                 <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />

                            </div>
                        </div>        
                    </div>
                </div>
            </div>
            <!-- End: Header -->
          </div>
          <div class="container">
            <!-- Start: Desc -->
            <div class="row me-row content-ct">
              <h2 class="row-title">Why <span style="color: #DD5138">MAA</span> Is Super Cool?</h2>
              <div class="col-md-2 feature">
                <span class="ti-world"></span>
                <h3>Alumni around the globe!</h3>
                <p>The best opportunity to meet and greet alumni from our institute.</p>
              </div>
              <div class="col-md-2 feature">
                <span class="ti-gift"></span>
                <h3>Give back to College</h3>
                <p>Help your college and juniors to progress & prosper. </p>
              </div>
              <div class="col-md-2 feature">
                <span class="ti-id-badge"></span>
                <h3>Profiles</h3>
                <p>View the profiles of all students and alumni, most of whom have extensive knowledge and experience.</p>
              </div>
              <div class="col-md-2 feature">
                <span class="ti-announcement"></span>
                <h3>News</h3>
                <p>View the latest news and announcements related to the institute, students and alumni. To submit a news, simply email us.</p>
              </div>
              
              <div class="col-md-2 feature">
                <span class="ti-comment"></span>
                <h3>Feedback</h3>
                <p>Your feedback is invaluable to us. Feel free to critique and suggest possible improvisations.</p>
              </div>

              <div class="col-md-2 feature">
                <span class="ti-more"></span>
                <h3>More..</h3>
                <p>More features yet to come.</p>
              </div>
              
            </div>
        </div>  
        <hr>
<% end %>          
